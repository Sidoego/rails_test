<h1 class="mt10" align="center">Articles</h1>


<div class="col-sm-4 offset-4">

<%i=0%>
<% @articles.each do |article| %>

<div class="accordion" id="accordionExample<%=article.id%>">
  <div class="card">
    <div class="card-header" id="headingOne<%=article.id%>">
      <h2 class="mb-0">
        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne<%=article.id%>" aria-expanded="<%=i==0%>" aria-controls="collapseOne<%=article.id%>">
          <%= "#{article.title.capitalize}" %>
        </button>
      </h2>
    </div>

    <div id="collapseOne<%=article.id%>" class="collapse <%=i==0 ? 'show' : ''%>" aria-labelledby="headingOne<%=article.id%>" data-parent="#accordionExample<%=article.id%>">
      <div class="card-body">
        <h5 class="card-title"><%= "#{article.title.capitalize}" %></h5>
        <p class="card-text"><%= article.description %></p>
      </div>
      <div class="card-footer bg-transparent border-light center">

        <div class="btn-group " role="group" aria-label="Basic example">
          <%= button_to "Edit", edit_article_path(:id =>article.id), {method: 'get', class: 'btn btn-outline-warning ', style:"width: 100px" }%>
          <%= button_to "Delete", article_path(:id =>article.id), {method: 'delete', data: { confirm: "Are you sure?" }, class: 'btn btn-outline-danger', style:"width: 100px"} %>
        </div>
      </div>
    </div>
  </div>
</div>
<%i=1%>
  <%end%>



</div>
<div class = 'mt10 center'>
<%= button_to "Create new article", new_article_path, { method:'get', class: 'btn btn-secondary'} %>


</div>
