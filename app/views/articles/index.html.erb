<h1>Articles</h1>

<% @articles.each do |article| %>
<table>
  <header>
    <td>Title</td>
    <td>Description</td>

  </header>
  <tr>
    <td>
      <%= link_to "#{article.title}" ,article_path(article)  %>
    </td>
    <td>
      <%= article.description %>
    </td>

    <td>
      <%= link_to "Edit", edit_article_path(article) %>
    </td>
    <td>
      <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure?"} %>
    </td>
  </tr>
</table>
</br>
<%end%>
