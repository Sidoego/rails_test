<% if @article.errors.any? %>
<div class="row">
  <div class="col-md-12">
  <div class ="col-md-7 offset-md-3">
    <div class="alert alert-danger" role="alert">
        <h4>
          <%= pluralize(@article.errors.count,"error")%>
          prohibited this article from being saved:
          </h3>
          <div class="card-body">
            <ul>
              <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>


<div class="row">

<div class="col-md-12">

<%= form_for(@article, :html => {class: "form-horizontal" ,  role: "form"}) do |f| %>

  <div class="form-group row">
    <div class="control-label col-sm-1 offset-md-2">
      <%= f.label :title %>
    </div>

    <div class="col-sm-7">
      <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
    </div>
  </div>

  <div class="form-group row">
    <div class="control-label col-sm-1 offset-md-2">
      <%= f.label :description %>
    </div>
    <div class="col-sm-7">
      <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
    </div>
  </div>

  <div class="form-group ">
    <div class="col-sm-1 offset-md-3">
      <%= f.submit class: 'btn btn-primary btn-lg' %>
    </div>
  </div>

<% end %>
</br>
<div class="col-md-4 offset-md-4 center">

[ <%= link_to "Cancel request and return to articles listing", articles_path %> ]

</div>

</div>
</div>
