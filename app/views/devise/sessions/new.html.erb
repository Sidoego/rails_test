<div class="card">
  <div class="card-body col-md-6 offset-3">
    <h5 class="card-header" style="background-color:#17a2b8; color:#fff; font: 400 20px Arial; "> Log in </h5>
</br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name),html: { class: "form-horizontal" ,  role: "form", method: :post }) do |f| %>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions center">
    <%= f.submit "Log in" , {class: "btn btn-info" , style:"width: 150px" } %>
  </div>
<% end %>
</br>
<%= render "devise/shared/links" %>
</div>
</div>
